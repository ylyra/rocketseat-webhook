{
	"$schema": "https://json.schemastore.org/tsconfig",
	"_version": "22.0.0",

	"compilerOptions": {
		"lib": ["es2022", "es2023.array", "es2023.collection"],
		"module": "nodenext",
		"target": "es2022",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",

		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
